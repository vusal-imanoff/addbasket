@model List<Brand>
@{
    ViewData["Title"] = "Index";
}

<!-- Page Heading -->
<div class="row justify-content-between">
    <div class="col-lg-1">
        <h1 class="h3 mb-4 text-gray-800">Brands</h1>
    </div>
    <div>
        <a class="btn btn-primary" asp-area="manage" asp-controller="brand" asp-action="create">Create</a>
        </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow">

            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Name</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Brand brand in Model)
                    {
                        <tr>
                            <td>@brand.Id</td>
                            <td>@brand.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>