@model List<BasketVM>

<div class="cart-btn">
    <a asp-controller="basket" asp-action="index">
        <i class="icon ion-bag"></i>
        <span class="text">Cart :</span>
        <span class="total">$@(Model.Count==0 ?  0 : (Model.Sum(e => e.Price * e.Count) + 7))</span>
        <span class="count">@(Model.Count)</span>
    </a>
</div>
<div class="mini-cart">
    <ul class="cart-items">
        @foreach (BasketVM basket in Model)
        {
<li>
    <div class="single-cart-item d-flex">
        <div class="cart-item-thumb">
            <a href="single-product.html"><img src="~/assets/images/product/@basket.Image" alt="product"></a>
            <span class="product-quantity">@(basket.Count)x</span>
        </div>
        <div class="cart-item-content media-body">
            <h5 class="product-name"><a href="single-product.html">@basket.Name</a></h5>
            <span class="product-price">€@basket.Price.ToString("F2")</span>
            <a asp-controller="basket" asp-action="removeitem" asp-route-id="@basket.Id" class="product-close deletebasket"><i class="fal fa-times"></i></a>
        </div>
    </div>
</li>
}
    </ul>
    <div class="price_content">
        <div class="cart-subtotals">
            <div class="products price_inline">
                <span class="label">Subtotal</span>
                <span class="value">€@(Model.Sum(e => e.Price*e.Count))</span>
            </div>
            <div class="shipping price_inline">
                <span class="label">Shipping</span>
                <span class="value">€@(Model.Count==0 ?  0 :  7)</span>
            </div>
            <div class="tax price_inline">
                <span class="label">Taxes</span>
                <span class="value">€0.00</span>
            </div>
        </div>
        <div class="cart-total price_inline">
            <span class="label">Total</span>
            <span class="value">€@(Model.Count==0 ?  0 : (Model.Sum(e => e.Price * e.Count) + 7))</span>
        </div>
    </div> <!-- price content -->
    <div class="checkout text-center">
        <a href="checkout.html" class="main-btn">Checkout</a>
    </div>
</div> <!-- mini cart -->