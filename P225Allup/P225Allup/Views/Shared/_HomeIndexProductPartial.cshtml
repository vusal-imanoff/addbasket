@model List<Product>

@for (int i = 0; i < (int)Math.Ceiling((decimal)Model.Count / 2); i++)
{
    <div class="col-lg-2">
        @foreach (Product product in Model.Skip(i * 2).Take(2))
        {
            <div class="single-product mt-30">
                <div class="product-image">
                    <a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">
                        <img class="first-image" src="~/assets/images/product/@product.MainImage" alt="product">
                        <img class="second-image" src="~/assets/images/product/@product.SecondImage" alt="product">
                    </a>
                    <ul class="product-meta">
                        <li><a asp-controller="basket" asp-action="addtobasket" asp-route-id="@product.Id" class="addtobasket"><i class="icon ion-bag"></i></a></li>
                        <li><a href="#"><i class="icon ion-android-favorite-outline"></i></a></li>
                        <li><a href="#"><i class="icon ion-android-options"></i></a></li>
                        <li><a data-toggle="modal" data-target="#productQuickModal" class="productModal" asp-controller="product" asp-action="detailmodal" asp-route-id="@product.Id"><i class="icon ion-android-open"></i></a></li>
                    </ul>
                </div>
                <div class="product-content">
                    <ul class="product-rating">
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                        <li><i class="fas fa-star"></i></li>
                    </ul>
                    <h4 class="product-title"><a asp-controller="product" asp-action="detail" asp-route-id="@product.Id">@product.Title</a></h4>
                    <div class="product-price">
                        @if (product.DiscountPrice > 0)
                        {
                            <span class="regular-price ">€@product.Price.ToString("F2")</span>
                            <span class="price-sale">€@product.DiscountPrice.ToString("F2")</span>
                        }
                        else
                        {
                            <span class="price-sale">€@product.Price.ToString("F2")</span>
                        }
                    </div>
                </div>
            </div> <!-- single product -->
        }
    </div>
}